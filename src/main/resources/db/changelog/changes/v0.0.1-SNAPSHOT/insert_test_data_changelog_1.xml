<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="insert-client-data" author="Alexey">
        <insert tableName="client">
            <column name="id">1</column>
            <column name="manager_id">1</column>
            <column name="status">1</column>
            <column name="tax_code">777777777</column>
            <column name="first_name">John</column>
            <column name="last_name">Doe</column>
            <column name="email">john.doe@example.com</column>
            <column name="address">123 Main St, Anytown USA</column>
            <column name="phone">555-1234</column>
        </insert>
    </changeSet>

    <changeSet id="insert-account-data" author="Alexey">
        <insert tableName="account">
            <column name="id">3</column>
            <column name="client_id">1</column>
            <column name="name">Checking Account</column>
            <column name="type">1</column>
            <column name="status">1</column>
            <column name="balance">3000.00</column>
            <column name="currency_code">1</column>
        </insert>
    </changeSet>

    <changeSet id="insert-product-data" author="Alexey">
        <insert tableName="product">
            <column name="id">2</column>
            <column name="manager_id">1</column>
            <column name="name">Personal Loan</column>
            <column name="status">1</column>
            <column name="currency_code">1</column>
            <column name="interest_rate">0.750</column>
            <column name="rest">10000</column>
        </insert>
    </changeSet>

    <changeSet id="insert-agreement-data" author="Alexey">
        <insert tableName="agreement">
            <column name="id">1</column>
            <column name="account_id">3</column>
            <column name="product_id">2</column>
            <column name="interest_rate">1.750</column>
        </insert>
    </changeSet>

    <changeSet author="Alexey" id="insert-transaction-data">
        <insert tableName="transaction">
            <column name="id">7</column>
            <column name="debit_account_id">3</column>
            <column name="credit_account_id">3</column>
            <column name="type">0</column>
            <column name="amount">300.0000</column>
            <column name="description">Test transaction</column>
            <column name="created_at">2022-01-01 12:00:00</column>
        </insert>
    </changeSet>



</databaseChangeLog>